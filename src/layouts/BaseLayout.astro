
---
import "../styles/global.css";
const { title = "digiTwin", description = "digiTwin database", dark = false } = Astro.props;
---
<html lang="en" class={dark ? 'dark' : ''}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href={import.meta.env.BASE_URL + 'favicon.svg'} />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-white text-slate-900">
    <slot name="nav" />
    <main>
      <slot />
    </main>
    <footer class="mx-auto max-w-6xl px-6 py-10 text-center text-xs text-slate-500">
      Built with Astro â€¢ {new Date().getFullYear()}
    </footer>
  </body>
</html>
