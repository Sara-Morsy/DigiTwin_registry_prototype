---
const base = import.meta.env.BASE_URL || "/";
const { compact = true } = Astro.props;
const pad = compact ? "py-8" : "py-12";
const gap = compact ? "gap-4" : "gap-6";
---

<section class={`mx-auto max-w-6xl px-6 ${pad}`}>
  <div class={`grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 ${gap}`}>
    <a href={base + "explore/"} class="block rounded-2xl border border-slate-200 p-6 hover:shadow-md">
      <h3 class="font-semibold">Explore the database</h3>
      <p class="text-sm text-slate-500 mt-1">Browse and query data</p>
    </a>

    <a href={base + "what-is/"} class="block rounded-2xl border border-slate-200 p-6 hover:shadow-md">
      <h3 class="font-semibold">What is DigiTwin?</h3>
      <p class="text-sm text-slate-500 mt-1">Overview &amp; documentation</p>
    </a>

    <a href={base + "register/"} class="block rounded-2xl border border-slate-200 p-6 hover:shadow-md">
      <h3 class="font-semibold">Register your Digital Twin</h3>
      <p class="text-sm text-slate-500 mt-1">Submit your twin metadata</p>
    </a>

    <a href={base + "schema/"} class="block rounded-2xl border border-slate-200 p-6 hover:shadow-md">
      <h3 class="font-semibold">Schema for DigitalTwin</h3>
      <p class="text-sm text-slate-500 mt-1">Columns &amp; types</p>
    </a>
  </div>
</section>
