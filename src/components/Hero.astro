---
/**
 * Hero.astro
 * Minimal hero with gradient background and a big headline.
 * Props:
 *  - title   (string) : main heading text
 *  - kicker  (string) : small pill text above the title (optional)
 *  - showKicker (boolean) : set false to hide the kicker
 */
const {
  title = 'DigiTWIN: building the foundation for the future of digital twins',
  kicker = 'Astro â™¥ digiTwin',
  showKicker = false,
} = Astro.props;
---
<section class="relative overflow-hidden text-white bg-gradient-to-b from-indigo-700 via-violet-700 to-slate-900">
  <div class="mx-auto max-w-6xl px-6 pt-20 pb-16 text-center">
    {showKicker && (
      <span class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-sm">
        {kicker}
      </span>
    )}
    <h1 class="mt-6 text-4xl sm:text-6xl font-extrabold tracking-tight">
      {title}
    </h1>
  </div>

  <!-- subtle radial glow -->
  <div class="pointer-events-none absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(255,255,255,0.15),transparent_60%)]"></div>
</section>

