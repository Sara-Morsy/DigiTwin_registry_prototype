---
const links = [
  { href: '/', label: 'Home' },
  { href: '/explore', label: 'Explore the database' },
  { href: '/what-is', label: 'What is DigiTwin?' },
  { href: '/register', label: 'Register your Digital Twin' },
  { href: '/schema', label: 'Schema for DigitalTwin' },
];
---
<header class="z-20 relative">
  <div class="mx-auto max-w-6xl px-6 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2">
      <img src={import.meta.env.BASE_URL + 'digitwin-logo.png'} alt="DigiTwin logo" class="h-7 w-auto" />
      <span class="sr-only">DigiTwin</span>
    </a>
    <nav class="hidden sm:flex items-center gap-6 text-sm text-slate-700">
      {links.map(l => <a href={l.href} class="hover:text-black">{l.label}</a>)}
    </nav>
  </div>
</header>

